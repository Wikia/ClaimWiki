{
	"name": "hydrawiki/claimwiki",
	"version": "2.0.1",
	"type": "mediawiki-extension",
	"description": "Used for claiming a wiki as a winged guardian to help nurture it into a beautiful flower.",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.0.0"
	},
	"require-dev": {
		"hydrawiki/hydrawiki-codesniffer": ">=1.0.0"
	},
	"autoload": {
        "psr-4": {
            "ClaimWiki\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
	"scripts": {
		"test": [
			"phpcs -p -s"
		],
		"fix": "phpcbf"
	}
}
